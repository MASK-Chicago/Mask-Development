.container
    .row
        .style-guide-section
            .page-header
                h1 Buttons
            h2 Primary Buttons
            .btn-group
                p White background
                button(type="button" class="btn-lg btn-primary") Button
                button(type="button" class="btn-df btn-primary") Button
                button(type="button" class="btn-sm btn-primary") Button
                button(type="button" class="btn-xs btn-primary" disabled) Button
            .btn-group.style-guide-dark-background
                p Dark background
                button(type="button" class="btn-lg btn-primary-neon") Button
                button(type="button" class="btn-df btn-primary-neon") Button
                button(type="button" class="btn-sm btn-primary-neon") Button
                button(type="button" class="btn-xs btn-primary-neon") Button
            h2 Secondary Buttons
            .btn-group
                button(type="button" class="btn-lg btn-secondary") Button
                button(type="button" class="btn-df btn-secondary") Button
                button(type="button" class="btn-sm btn-secondary") Button
                button(type="button" class="btn-xs btn-secondary") Button
            .btn-group.style-guide-dark-background
                button(type="button" class="btn-lg btn-secondary-neon") Button
                button(type="button" class="btn-df btn-secondary-neon") Button
                button(type="button" class="btn-sm btn-secondary-neon") Button
                button(type="button" class="btn-xs btn-secondary-neon") Button
            h2 Mobile Buttons
            .btn-group
                button(type="button" class="btn-lg btn-primary") Button
        .style-guide-section
            .page-header 
                h1 Links
            a(href="#" class=) Link
            .style-guide-dark-background
                a(class="link-dark-bg" href="#") Link
            a(href="#" disabled) Link
        .style-guide-section
            .page-header
                h1 Typography

            h1 Heading 1 (Open Sans)
            h1(class="pm") Heading 1 (Permanent Marker)
            h2 Heading 2
            h3 Heading 3
            h4 Heading 4
            h5 Heading 5
            h6 Heading 6

